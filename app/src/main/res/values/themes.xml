<resources>

    <style name="Theme.ContactsLite" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/primary</item>
        <item name="tabIconTint">@color/selector_main_tab_item</item>
        <item name="tabIndicatorColor">@color/color_on_primary</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>